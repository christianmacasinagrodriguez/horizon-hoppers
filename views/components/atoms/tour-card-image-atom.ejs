<div class="w-full h-fit relative">
    <img class="w-full h-[300px] object-cover brightness-95 hover:brightness-105 transition-all duration-500" src="<%= tourCardDatus.tourCardImage %>">
    <% const heartColor = tourCardDatus.tourCardWishList ? 'text-white' : 'text-red-500' %>
    <a class="absolute top-9 right-9 bg-black w-9 h-9 bg-opacity-20 grid place-content-center rounded-full <%= heartColor %>  hover:cursor-pointer hover:bg-white hover:text-emerald-700 hover:bg-opacity-100 transition-all duration-500" href="#">
        <i class="fa fa-heart  w-full h-full text-sm" aria-hidden="true"></i>
    </a>
</div>